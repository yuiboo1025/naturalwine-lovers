  <div class='row mb-5 myindex_show_profile'>
    <div class="col-sm-3">
        <h4 class="text-left">
          <%= image_tag member.get_profile_image(70,70), class: "rounded-circle" %>
          <%= member.name %>
          <%= link_to admin_member_path(member), class: "text_blue" do %>
            &nbsp;<i class="fas fa-user-cog"></i>
          <% end %>
        </h4>
        <h6 class="mt-3 text-center">
        <%= link_to followings_admin_member_path(member), class: "text_blue" do %>
          フォロー数　：<%= member.followings.where(is_deleted: false).count %>
        <% end %></br>
        <%= link_to followers_admin_member_path(member), class: "text_blue" do %>
          フォロワー数：<%= member.followers.where(is_deleted: false).count %>
        <% end %>
        </h6>
    </div>

    <div class="col-sm-md-4 myindex_show_table">
      <table class="table table-sm" style="color: #555555;">
        <tr>
          <th class="text-left">在住県</th>
          <td class="text-left"><%= member.prefecture %></td>
        </tr>
        <tr>
          <th class="text-left">好きなワインのジャンル</th>
          <td class="text-left"><%= member.favorite_genre %></td>
        </tr>
        <tr>
          <th class="text-left">紹介文</th>
          <td class="text-left"><%= member.introduction %></td>
        </tr>
      </table>
    </div>

    <div class="col-sm-3">
      <div class="btn">
        <%= link_to admin_wines_myindex_path(member), class: "member_info_content_list" do %>
          <h7><i class="fas fa-wine-bottle"></i>ナチュール記録all</h7>
        <% end %>
        </div>
      <div class="btn">
        <%= link_to admin_wines_again_index_path(member), class: "member_info_content_list" do %>
          <i class="fas fa-check"></i>また飲みたいナチュール
        <% end %>
      </div>
      <div class="btn">
        <%=link_to bookmarks_admin_member_path(member), class: "member_info_content_list" do %>
          <i class="fas fa-bookmark"></i>ブックマークした投稿
        <% end %>
      </div>
      <div class="btn">
        <%=link_to followings_wine_member_path(member), class: "member_info_content_list" do %>
          <i class="fas fa-users"></i>&nbsp;フォローユーザーの投稿
        <% end %>
      </div>
    </div>

    <div class="col-sm-md-2">
    </div>

  </div>