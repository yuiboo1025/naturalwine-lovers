<div class="container">
  <div class="card rounded col-9 mx-auto mt-4" style="background-color:#fcfced;" >
    <div class="row">
      <div class="col-12 p-0">
        <div class="card-header">
          <h4 class="text-center">ジャンル一覧・追加</h4>
        </div>
        <div class="text-center p-3">
          <%=form_with model: @genre,url: admin_genres_path,method: :post, local: true do |f| %>
            <%= f.text_field :genre_name, style:"background-color:#fcfced" %>
            <%= f.submit"新規登録",class: "btn pr-2 pl-2", style:"color:#007b43; background-color:#badcad;" %>
          <% end %>
        </div>
        <table class="table table-hover text-center mt-2 mb-0" style="background-color:#fcfced">
          <thead class="table-active">
            <tr>
              <th style="width:80%">ジャンル</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <%@genres.each do |genre|%>
              <tr>
                <td><%=genre.genre_name %></td>
                <td><%= link_to "編集",edit_admin_genre_path(genre), class: "btn pr-4 pl-4", style:"color:#007b43; background-color:#badcad;" %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
