<div class="container">
  <div class="row">
    <div class="col">
      <h2>マイページ</h2>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <h4>登録情報</h4>
    </div>
    <div class="col">
      <%= link_to "編集する", edit_information_path, class:"btn btn-success px-4 mb-2" %>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <table class="table table-bordered">
        <tr>
          <th class="table-active">プロフィール画像</th>
          <td>
            <%#= image_tag @member.get_profile_image(100,100) %>
          </td>
        </tr>
        <tr>
          <th class="table-active">ユーザーネーム</th>
          <td><%= @member.name %></td>
        </tr>
        <tr>
          <th class="table-active">メールアドレス</th>
          <td><%= @member.email %></td>
        </tr>
        
        <tr>
          <th class="table-active">好きなワインのジャンル</th>
          <td><%= @member.favorite_genre %></td>
        </tr>
        <tr>
          <th class="table-active">在住県</th>
          <td><%= @member.prefecture %></td>
        </tr>
        <tr>
          <th class="table-active">紹介文</th>
          <td><%= @member.introduction %></td>
        </tr>
      </table>
    </div>