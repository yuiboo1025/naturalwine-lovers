<% if member_signed_in? %>
   <%# 自分以外のマイページにフォローボタンを %>
  <% if current_member != member %>
     <%# wineモデルで作成した .following?(member) メッソドを使用 %>
    <% if current_member.following?(member) %>
      <%= link_to "フォロー外す", member_relationships_path(member.id), method: :delete, remote: true, class: "btn unfollow_btn pr-2 pl-2 ml-4" %>
    <% else %>
      <%= link_to "フォローする", member_relationships_path(member.id), method: :post, remote: true, class: "btn follow_btn pr-2 pl-2 ml-4" %>
    <% end %>
  <% end %>
<% end %>