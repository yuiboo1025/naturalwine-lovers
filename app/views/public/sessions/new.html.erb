<div class="container justify-content-center my-4">
  <div class="row justify-content-center">
    <div class="col-4">
      <h2>Log in</h2>
    </div>
  </div>
  
  <%= form_with model: @member, url: member_session_path do |f| %>
  <div class="row justify-content-center">
    <div class="col-4">
        <div class="field">
          <%#= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス", size: "40" %>
        </div>

        <div class="field">
          <%#= f.label :password %><br />
          <%= f.password_field :password, autocomplete: "current-password", placeholder: "パスワード", size: "40" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>
    </div>
  </div>
  
  <div class="row justify-content-center">
    <div class="col-4">
      <%= f.submit "Log-In", size: "40", class: "btn btn-info btn-block px-5 log_in_btn" %>
    </div>
  </div>
<% end %>
  
  <div class="row justify-content-center mt-4">
    <div class="col-4 text-center">
      <h6>アカウントをお持ちでない方はこちらから</h6>
      <p><%= link_to "→ 新規登録", new_member_registration_path, class: "underline" %></p>
    </div>
  </div>

</div>

<style>
  .log_in_btn {
    font-size: 18px;
    font-weight: bold;
  }
</style>
