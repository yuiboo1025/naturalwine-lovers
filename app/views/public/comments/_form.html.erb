<%= form_with model: [wine, comment], local: false do |f| %>
  <%= f.text_area :comment, rows: '3', cols: '50', placeholder: "コメントをここに", class: "comment_form_area" %>
  <%= f.submit "送信する" %>
<% end %>
        
<style>
@media screen and (max-width:425px) {
  .comment_form_area {
    width: 300px;
    height: 50px;
    }
 }
</style>