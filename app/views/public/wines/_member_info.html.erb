<div class="member_info_contents">
  <div class='row mb-5 myindex_show_profile' style="color: #555555;">
    <div class="col-3">
        <h4 class="text-left">
          <%= image_tag member.get_profile_image(70,70), class: "rounded-circle" %>
          <%= member.name %>
          <% if member == current_member %>
            <%= link_to member_path(member), class: "member_info_content" do %>
              <i class="fas fa-user-cog"></i>
            <% end %>
          <% end %>
        </h4>

        <div class="mt-3 text-center">
        <%= link_to followings_member_path(member), class: "member_info_content" do %>
          フォロー数　：<span class="followings_count"><%= render "public/relationships/followings_counter", member: member %></span>
        <% end %>
        </div>
        <div class="mt-3 text-center">
        <%= link_to followers_member_path(member), class: "member_info_content" do %>
          フォロワー数：<span class="followers_count-<%= member.id %>"><%= render "public/relationships/followers_counter", member: member %></span>
        <% end %>
        </div>

    </div>

    <div class="col-4 myindex_show_table" style="color: #555555;">
      <table class="table table-sm">
        <tr>
          <th class="text-left">在住県</th>
          <td class="text-left"><%= member.prefecture %></td>
        </tr>
        <tr>
          <th class="text-left">好きなワインのジャンル</th>
          <td class="text-left"><%= member.favorite_genre %></td>
        </tr>
        <tr>
          <th class="text-left">紹介文</th>
          <td class="text-left"><%= member.introduction %></td>
        </tr>
      </table>
    </div>

    <div class="col-3">
      <div class="btn">
        <%= link_to wines_myindex_path(member), class: "member_info_content" do %>
          <h7><i class="fas fa-wine-bottle"></i>ナチュール記録all</h7>
        <% end %>
        </div>
      <div class="btn">
        <%= link_to wines_again_index_path(member), class: "member_info_content" do %>
          <i class="fas fa-check"></i>また飲みたいナチュール
        <% end %>
      </div>
      <% if current_member == member %>
      <div class="btn">
        <%=link_to bookmarks_member_path(member), class: "member_info_content" do %>
          <i class="fas fa-bookmark"></i>ブックマークした投稿
        <% end %>
      </div>
      <% end %>
    </div>

    <div class="col-2 relationships_btn-<%= member.id %>">
      <%= render 'public/relationships/relationship', member: member %>
    </div>
  </div>

</div>

<style>
  .member_info_content {
    text-decoration: none;
    color: #3d83bf;
    font-size: 16px;
  }

  .myindex_show_profile {
    text-decoration: none;
    color: #555555;
  }
</style>
