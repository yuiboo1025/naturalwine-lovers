 <!-- ナチュール記録ボタン -->
    <%= render 'public/wines/post_wine-btn' %>

<!-- タブ作成-->
<div class ="row justify-content-center mt-3" >
  <div class ="col">
    <ul id="tab-menu">
        <li><a href="#tab-All" class="active">All</a></li>
      <% genres.each do |genre| %>
        <li><a href="#tab-<%= genre.genre_name %>" class=""><%= genre.genre_name %></a></li>
      <% end %>
      </ul>
   </div>
</div>

<!-- タブの内容作成-->
<div class ="row">
  <div id="tab-contents">

    <!-- Allを表示-->
    <div id="tab-All" class="tab">
      <% wines.each do |wine| %>
       <!--ブックマークをdestroyした際に一覧から消す非同期設定のためにidを設定-->
        <div id="bookmark_list_<%= wine.id %>">
          <div class="card-deck wine_card my-2 pt-1 px-1" style="width:300px;">
            <div class ="card">
            
              <div class ="card_spot_name ml-2">
                <%= link_to spot_path(wine.spot) do %>
                  📍<%= wine.spot.spot_name %>
                <% end %>
              </div>
              <div class ="card_wine_image text-center">
                <%= link_to wine_path(wine) do %>
                  <%= image_tag wine.get_wine_image(290,290) %>
                <% end %>
              </div>
              <div class ="card_member_name ml-4">
               <%= link_to wines_myindex_path(wine.member.id) do %>
                  <%= wine.member.name %>
                <% end %>
              </div>
              <div id= "wine_<%= wine.id %>">
                <div class ="row d-flex justify-content-end mr-3">
                  <div class ="card_commenr_name">
                    <%= link_to wine_path(wine.id) do%>
                      <i class="far fa-comment"></i><%= wine.comments.count %>
                    <% end %>
                  </div>
                  <div class ="card_favorites favorite-btn mx-3">
                     <%= render 'public/favorites/favorite-btn', wine: wine %>
                  </div>
                  <div class ="card_bookmark bookmark-btn">
                     <%= render 'public/bookmarks/bookmark-btn', wine: wine %>
                  </div>
                </div>
              </div>
            
            </div>
          </div>
        </div>
      <% end %>
    </div>

   <!-- ジャンルごとに表示-->
    <% genres.each do |genre| %>
      <div id="tab-<%= genre.genre_name %>" class="tab">
        <%# genre.wines.where(member_id: member.id).each do |wine| %>
        <% genre.wines.each do |wine| %>
          <!--ブックマークをdestroyした際に一覧から消す非同期設定のためにidを設定-->
          <div id="bookmark_list_<%= wine.id %>">
            <div class="card-deck wine_card my-2 pt-1 px-1" style="width:300px;">
              <div class ="card">
              
                <div class ="card_spot_name ml-2">
                  <%= link_to spot_path(wine.spot) do %>
                   📍<%= wine.spot.spot_name %>
                  <% end %>
                </div>
                <div class ="card_wine_image text-center">
                  <%= link_to wine_path(wine) do %>
                    <%= image_tag wine.get_wine_image(290,290) %>
                  <% end %>
                </div>
                <div class ="card_member_name ml-4">
                  <%= link_to wines_myindex_path(wine.member.id) do %>
                    <%= wine.member.name %>
                  <% end %>
                </div>
              
                <div id= "wine_<%= wine.id %>">
                  <div class ="row d-flex justify-content-end mr-3">
                    <div class ="card_commenr_name">
                      <%= link_to wine_path(wine.id) do%>
                        <i class="far fa-comment"></i><%= wine.comments.count %>
                      <% end %>
                    </div>
                    <div class ="card_favorites favorite-btn mx-3">
                      <%= render 'public/favorites/favorite-btn', wine: wine %>
                    </div>
                    <div class ="card_bookmark bookmark-btn">
                      <%= render 'public/bookmarks/bookmark-btn', wine: wine %>
                    </div>
                  </div>
                </div>
            
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>

  </div>
</div>

    <script>
    //初期設定で表示されるのはtab-Allのコンテンツだけにして、それ以外の内容は非表示にする
      $('#tab-contents .tab[id != "tab-All"]').hide();

　　//id="tab-menu"のaタグがクリックされたときに、処理を実行
      $('#tab-menu a').on('click', function(event) {
        //id="tab-contents"内のいずれかのタブがクリックされたときに、そのタブ内の全コンテンツをいったん非表示
        $("#tab-contents .tab").hide();
        //activeクラスを削除する(CSSを対応させるため)
        $("#tab-menu .active").removeClass("active");
        //$(this)のとき(タブがクリックされたとき)activeクラスを追加する
        $(this).addClass("active");
        //href属性を取得し、取得したhref属性の中身を表示
        $($(this).attr("href")).show();
        event.preventDefault();
      });
   </script>


