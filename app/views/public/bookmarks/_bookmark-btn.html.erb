  <%# ログインしていない場合にはブックマークボタンを押すと、ログイン画面へ遷移 %>
  <% if member_signed_in? %>   
  
     <%# wineモデルで作成したメソッドを使用 %>
    <% if wine.bookmarked_by?(current_member) %>
       <%= link_to wine_bookmarks_path(wine),method: :delete, remote: true do %>
       <i class="fas fa-bookmark"></i>
       <% end %>
    <% else %>
      <%= link_to wine_bookmarks_path(wine),method: :post, remote: true  do %>
      <i class="far fa-bookmark"></i>
      <% end %>
    <% end %>
  
  <% else %>
  
    <%= link_to new_member_session_path  do %>
      <i class="far fa-bookmark"></i>
    <% end %>
    
  <% end %>