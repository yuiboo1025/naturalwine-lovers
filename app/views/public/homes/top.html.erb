<div class="main-visual">
  <div class="container text-center my-4">
    
    <div class="row justify-content-center">
      <div class="col">
        <%= image_tag "logo4.jpg", class: "rounded-circle", size: "300x300", :style=>"border: 2px solid #3d83bf;" %>
      </div>
    </div>
    
    <div class="row justify-content-center my-3" >
      <div class="col">
        <h2 class="catch-copy">Let's enjoy Naturalwine!!!</h2>
      </div>
    </div>
    
    <div class="row justify-content-center my-3" >
      <div class="col-3">
        <%= link_to 'ゲストログイン（閲覧用）', members_guest_sign_in_path, class: "btn btn-secondary btn-sm btn-block mb-3 sign_in", method: :post %>
